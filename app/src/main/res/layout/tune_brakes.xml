<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgrond_white_for_main_back"
    tools:context="com.sideki.forzahorizon4tuner.view.tune.TuneBrakes">

    <LinearLayout
        android:id="@+id/str_sost"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@drawable/gradient_for_toolbar"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/title_tormoz_v_nastr"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/str_sost"
        android:background="@drawable/background_title_head"
        android:gravity="center"
        android:text="@string/nastr_tormoza"
        android:textAllCaps="true"
        android:textColor="@color/colorWhite"
        android:textSize="26sp"
        app:fontFamily="@font/russo_one"
        tools:ignore="RtlHardcoded,RtlSymmetry" />

    <Button
        android:id="@+id/btn_menu_brakes_tune"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/anim_button_back_v_title"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_tormoz_v_nastr"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_tormoz_v_nastr1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nastr_tormoz1"
            android:textColor="@color/colorForText"
            android:textSize="16sp"
            app:fontFamily="@font/roboto" />

        <TextView
            android:id="@+id/txt_tormoz_v_nastr2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nastr_tormoz2"
            android:textColor="@color/colorForText"
            android:textSize="16sp"
            app:fontFamily="@font/roboto" />

    </LinearLayout>
</RelativeLayout>