<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgrond_white_for_main_back"
    tools:context="com.sideki.forzahorizon4tuner.view.tune.TuneDifferential">

    <LinearLayout
        android:id="@+id/str_sost"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@drawable/gradient_for_toolbar"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/title_dif_v_nastr"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/str_sost"
        android:background="@drawable/background_title_head"
        android:gravity="center"
        android:text="@string/nastr_dif"
        android:textAllCaps="true"
        android:textColor="@color/colorWhite"
        android:textSize="26sp"
        app:fontFamily="@font/russo_one"
        tools:ignore="RtlSymmetry" />

    <Button
        android:id="@+id/btn_menu_diff_tune"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/anim_button_back_v_title"
        android:gravity="center" />

    <Button
        android:id="@+id/btn_hint_diff_tune"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/anim_button_hint"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_dif_v_nastr"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nastr_dif_title1"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@color/colorTitles"
            android:gravity="center"
            android:text="@string/nastr_dif_title1"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            app:fontFamily="@font/russo_one" />

        <TextView
            android:id="@+id/nastr_dif1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:text="@string/nastr_dif1"
            android:textColor="@color/colorForText"
            android:textSize="16sp"
            app:fontFamily="@font/roboto" />

        <TextView
            android:id="@+id/nastr_dif2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="5dp"
            android:text="@string/nastr_dif2"
            android:textColor="@color/colorForText"
            android:textSize="16sp"
            app:fontFamily="@font/roboto" />

        <TextView
            android:id="@+id/nastr_dif_title2"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@color/colorTitles"
            android:gravity="center"
            android:text="@string/nastr_dif_title2"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            app:fontFamily="@font/russo_one" />

        <TextView
            android:id="@+id/nastr_dif3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:text="@string/nastr_dif3"
            android:textColor="@color/colorForText"
            android:textSize="16sp"
            app:fontFamily="@font/roboto" />

        <TextView
            android:id="@+id/nastr_dif4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="5dp"
            android:text="@string/nastr_dif4"
            android:textColor="@color/colorForText"
            android:textSize="16sp"
            app:fontFamily="@font/roboto" />

        <TextView
            android:id="@+id/nastr_dif_title3"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@color/colorTitles"
            android:gravity="center"
            android:text="@string/nastr_dif_title3"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            app:fontFamily="@font/russo_one" />

        <TextView
            android:id="@+id/nastr_dif5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:text="@string/nastr_dif5"
            android:textColor="@color/colorForText"
            android:textSize="16sp"
            app:fontFamily="@font/roboto" />

    </LinearLayout>
</RelativeLayout>