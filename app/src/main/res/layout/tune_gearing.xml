<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgrond_white_for_main_back"
    tools:context="com.sideki.forzahorizon4tuner.view.tune.TuneGearing">

    <LinearLayout
        android:id="@+id/str_sost"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@drawable/gradient_for_toolbar"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/title_pered_v_nastr"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/str_sost"
        android:background="@drawable/background_title_head"
        android:gravity="center"
        android:text="@string/nastr_peredachi"
        android:textAllCaps="true"
        android:textColor="@color/colorWhite"
        android:textSize="26sp"
        app:fontFamily="@font/russo_one"
        tools:ignore="RtlSymmetry" />

    <Button
        android:id="@+id/btn_menu_gearing_tune"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/anim_button_back_v_title"
        android:gravity="center" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_pered_v_nastr"
        android:layout_marginBottom="10dp"
        android:scrollbarThumbVertical="@drawable/scrollbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nastr_pered_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorTitles"
                android:gravity="center"
                android:text="@string/nastr_pered_title1"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"
                app:fontFamily="@font/russo_one" />

            <TextView
                android:id="@+id/nastr_pered1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:text="@string/nastr_pered1"
                android:textColor="@color/colorForText"
                android:textSize="16sp"
                app:fontFamily="@font/roboto" />

            <TextView
                android:id="@+id/nastr_pered_title2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorTitles"
                android:gravity="center"
                android:text="@string/nastr_pered_title2"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"
                app:fontFamily="@font/russo_one" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="6dp"
                app:srcCompat="@drawable/ic_table"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/nastr_pered2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="12dp"
                android:text="@string/nastr_pered2"
                android:textColor="@color/colorForText"
                android:textSize="16sp"
                app:fontFamily="@font/roboto" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="147dp"
                app:srcCompat="@drawable/ic_table_gear"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/nastr_pered3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="12dp"
                android:text="@string/nastr_pered3"
                android:textColor="@color/colorForText"
                android:textSize="16sp"
                app:fontFamily="@font/roboto" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="147dp"
                app:srcCompat="@drawable/ic_table_gear_norm"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/nastr_pered4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:text="@string/nastr_pered4"
                android:textColor="@color/colorForText"
                android:textSize="16sp"
                app:fontFamily="@font/roboto" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>