<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sideki.forzahorizon4tuner.view.managers.MainFragment">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_gradient_for_linear"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="0dp"
        android:layout_height="210dp"
        android:layout_margin="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/main_title"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_view">

        <Button
            android:id="@+id/btn_upgrades"
            android:layout_width="140dp"
            android:layout_height="45dp"
            android:background="@drawable/anim_buttons_click"
            android:text="@string/main_menu_upgrades"
            android:textColor="@color/colorWhite"
            android:textSize="12sp"
            app:fontFamily="@font/russo_one" />

        <Button
            android:id="@+id/btn_tune"
            android:layout_width="140dp"
            android:layout_height="45dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/anim_buttons_click"
            android:text="@string/main_menu_tune"
            android:textColor="@color/colorWhite"
            android:textSize="12sp"
            app:fontFamily="@font/russo_one" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>